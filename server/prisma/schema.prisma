generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cursos {
  id          Int        @id @default(autoincrement())
  name        String
  categoryId  Int?
  category    Category?  @relation(fields: [categoryId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  inicio      String
  fin         String
  descripcion String
  costo       Int
  programa    String
  img         String
}

model Category {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  cursos Cursos[] // Relaci√≥n uno a muchos
}
model Staff {
  id     Int    @id @default(autoincrement())
  name   String
  cargo  String
  imagen String
}
