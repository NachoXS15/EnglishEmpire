generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}



model Cursos{
  id Int @id @default(autoincrement())
  name String
  idCategory Int
  category Category?
  inicio String
  fin String
  descripcion String
  costo Int
  programa String
}

model Category {
  idCategory Int @id @unique
  cursos Cursos? @relation(fields: [idCategory], references: [id])
  name String @unique
}

model Staff{
  id Int @id @default(autoincrement())
  name String
  cargo String
  imagen String
}